@model AccountModel
@{
    ViewData["Title"] = "Forgot Password";
}

<section class="login_container" style="margin-top:20px;">
    <img src="/images/mimsv2.png" class="mims_logo" />
    <h3>@ViewData["Title"]</h3>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-3">@ViewBag.Message</div>
    }

    <form asp-action="ForgotPassword" method="post">
        <div class="form-group">
            <label asp-for="Email">Enter your email address:</label>
            <input asp-for="Email" class="form-control" required />
        </div>
        <br />
        <button type="submit" class="btn btn-primary mt-2">Send Reset Link</button>
    </form>
</section>



